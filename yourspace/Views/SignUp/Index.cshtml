@{
    var firstName = "";
    var lastName = "";

    if (IsPost)
    {
        firstName = Request.Form["firstName"];
        lastName = Request.Form["lastName"];

        var db = Database.Open("Account");
        var insertCommand = "INSERT INTO UserAccount (firstName, lastName) VALUES(@0, @1)";
        db.Execute(insertCommand, firstName, lastName);
        Response.Redirect("~/Login");
    }
}



